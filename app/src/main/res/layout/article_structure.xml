<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="200dp">

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="200dp">

        <TextView

            android:id="@+id/article_structure_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="Delete" />

        <ImageView
            android:id="@+id/article_structure_picture"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/article_structure_delete"
            android:layout_alignParentLeft="true"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/article_structure_picture"
            android:id="@+id/article_structure_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/article_structure_delete"
            android:layout_alignParentRight="true"
            android:text="DATE" />

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/article_structure_picture"
            android:id="@+id/article_structure_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/article_structure_date"
            android:layout_alignParentRight="true"
            android:text="Description " />

    </RelativeLayout>


</androidx.cardview.widget.CardView>